<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.binge.MainActivity"
    tools:showIn="@layout/activity_main"
    style="@style/thing2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/abc_search_hint"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/searchButton"
        android:onClick="search"
        android:textColor="#ffffff"
        android:background="#222222"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/editText"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select search field..."
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/searchButton"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/search_by"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView4" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Netflix"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="netflix"
        android:textColor="#ffffff"
        android:background="#e21414"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Hulu"
        android:id="@+id/button2"
        android:onClick="hulu"
        android:clickable="true"
        android:textColor="#ffffff"
        android:background="#1f9b23"
        android:layout_marginTop="126dp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="All"
        android:id="@+id/list"
        android:clickable="true"
        android:textColor="#ffffff"
        android:background="#2424bf"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="List by Availability"
        android:id="@+id/textView5"
        style="@style/cat"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Binge Â© Samantha Brewer, Nathan Ross, Brandi Turner, CJ Pozzi"
        android:id="@+id/textView7"
        android:editable="false"
        android:elegantTextHeight="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
